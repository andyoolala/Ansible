- hosts: all
  become: true
  gather_facts: no
  tasks:
    - name: get account status
      command: lslogins -aupc
      register: userlist
    - debug:
        msg: "uid={{ _uid }} ,user={{ _user }}, lock={{ _lock }}, nologin={{ _nologin }}"
      loop: "{{ userlist.stdout_lines }}"
      vars:
        _arr: "{{ item.split(':') }}"
        _uid: "{{ _arr.0 }}"
        _user: "{{ _arr.1 }}"
        _lock: "{{ _arr.9 }}"
        _nologin: "{{ _arr.11 }}" 

